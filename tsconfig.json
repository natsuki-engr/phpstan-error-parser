{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "outDir": "dist",
    "lib": ["ES2022"],
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "rootDir": "./"
  },
  "include": ["src/**/*.ts", "dev/**/*.ts"],
  "exclude": ["**/node_modules/**"]
}
