{
  "name": "phpstan-error-parser",
  "version": "0.0.1",
  "type": "module",
  "description": "This parses PHPStan error message into a structured format.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "bin": {
    "phpstan-parse": "./bin/cli.js",
    "calc-offset": "./test/cli-scripts/offset-calculator.js"
  },
  "scripts": {
    "build": "npm run build:lib && npm run build:cli",
    "build:lib": "tsc -p tsconfig.lib.json",
    "build:cli": "tsc -p tsconfig.cli.json",
    "postbuild": "chmod +x bin/cli.js",
    "prepublishOnly": "npm run build",
    "diagram": "vite -c vite-dev.config.ts",
    "test": "vitest",
    "test:run": "vitest --run",
    "biome": "biome check --write",
    "check": "tsc --noEmit && npm run biome && npm run test:run"
  },
  "keywords": [
    "PHPStan",
    "parser"
  ],
  "author": "Natsuki",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@hono/node-server": "^1.19.6",
    "@hono/vite-dev-server": "^0.23.0",
    "@types/node": "^24.9.2",
    "hono": "^4.10.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "chevrotain": "^11.0.3"
  }
}
